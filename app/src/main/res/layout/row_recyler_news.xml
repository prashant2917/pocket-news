<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/dimen_4_dp"
        app:cardBackgroundColor="@color/white_color"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/dimen_8_dp"
        android:padding="@dimen/dimen_8_dp"
        app:cardPreventCornerOverlap="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="left"
                android:text="@string/dummy_text"
                android:maxLines="2"
                android:textColor="@color/grey_900_color"
                android:fontFamily="sans-serif"></TextView>

            <ImageView
                android:id="@+id/img_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_headline"
                android:layout_marginTop="@dimen/dimen_10_dp"
                android:background="@drawable/ic_launcher_background"
                android:contentDescription="@string/app_name"
                />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>