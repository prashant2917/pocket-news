<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_gravity="center_horizontal"
            android:fontFamily="cursive"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="@dimen/toolbar_header_text_size"/>


        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:src="@drawable/ic_settings"
            android:layout_gravity="end"
            android:layout_margin="@dimen/toolbar_view_margin"
            android:contentDescription="@string/app_name" />




    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/view_toolbar_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_divider_height"
        android:background="@color/toolbar_divider_color"
        android:layout_below="@+id/toolbar" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_toolbar_divider"
        android:background="@color/white_color"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_news_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:tabGravity="center"
            app:tabMode="scrollable"
            android:paddingLeft="@dimen/viewpager_padding"
            android:paddingRight="@dimen/viewpager_padding"
            app:tabTextColor="@android:color/black" />


    </androidx.viewpager.widget.ViewPager>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        />

</RelativeLayout>